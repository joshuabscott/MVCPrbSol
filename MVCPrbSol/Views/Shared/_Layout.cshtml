@using Microsoft.AspNetCore.Identity
@using MVCPrbSol.Services
@inject UserManager<PSUser> UserManager
@inject IPSAccessService AccessService
@inject IPSProjectService _projectService

@{
    ViewData["Title"] = "Dashboard";
    var userId = await UserManager.GetUserAsync(User);
    var roleName = (await UserManager.GetRolesAsync(await UserManager.GetUserAsync(User))).FirstOrDefault();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Problem Solver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <link rel="stylesheet" href="~/css/site.css" />

