@page
@model ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forget your password?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Argus | Recover Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link href="~/css/app.min.css" rel="stylesheet" />

</head>

<body>
    <!-- BEGIN #app -->
    <div id="app" class="app app-full-height app-without-header">
        <!-- BEGIN login -->
        <div class="login">
            <!-- BEGIN login-content -->
            <div class="login-content">
                <form id="account" method="post">
                    <h1 class="text-center">Recover Password</h1>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg fs-15px" placeholder="username@address.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block fw-500 mb-3">Submit</button>
                    </div>
                    <div class="form-group">
                        <div class="text-center text-muted">
                            Back to <a asp-area="Identity" asp-page="/Account/Login">Sign In</a>.
                        </div>
                    </div>
                </form>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login -->
        <!-- BEGIN btn-scroll-top -->
        <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
        <!-- END btn-scroll-top -->
    </div>


    <script src="~/js/app.min.js"></script>
    

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
