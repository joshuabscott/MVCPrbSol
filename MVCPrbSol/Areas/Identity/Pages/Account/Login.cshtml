@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Problem Solver | Sign In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link href="~/css/app.min.css" rel="stylesheet" />

</head>
<body>

    <!-- BEGIN #app -->
    <div id="app" class="app app-full-height app-without-header">
        <!-- BEGIN login -->
        <div class="login">
            <!-- BEGIN login-content -->
            <div class="login-content">
                <form id="account" method="post">
                    <h1 class="text-center">Sign In</h1>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg fs-15px" placeholder="username@address.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control form-control-lg fs-15px" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox custom-checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block fw-500 mb-3">Sign In</button>
                    </div>
                    <div class="form-group">
                        <div class="text-center text-muted">
                            Don't have an account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>.
                        </div>
                        <div class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forget your password?</a>
                        </div>
                        <hr />

                    </div>
                </form>
                <form id="account" method="post">
                    <div class="form-group">
                        <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-primary">Demo Administrator</button>
                    </div>
                </form>
                <form id="account" method="post">
                    <div class="form-group">
                        <button type="submit" name="demoEmail" value="DemoPMEmail" class="btn btn-primary">Demo Project Manager</button>
                    </div>
                </form>
                <form id="account" method="post">
                    <div class="form-group">
                        <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-primary">Demo Developer</button>
                    </div>
                </form>
                <form id="account" method="post">
                    <div class="form-group">
                        <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-primary">Demo Submitter</button>
                    </div>
                </form>
                <form id="account" method="post">
                    <div class="form-group">
                        <button type="submit" name="demoEmail" value="DemoNewUserEmail" class="btn btn-primary">Demo New User</button>
                    </div>
                </form>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login -->
        <!-- BEGIN btn-scroll-top -->
        <a href="#" data-click="scroll-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>
        <!-- END btn-scroll-top -->
    </div>
    <!-- END #app -->
    
    <script src="~/js/app.min.js"></script>

</body>
</html>
